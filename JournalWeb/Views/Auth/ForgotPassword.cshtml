@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Quên mật khẩu</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: system-ui;
        }

        .card {
            width: 380px;
            border-radius: 22px;
        }

        .form-control {
            border-radius: 12px;
            height: 44px;
        }

        .btn-primary {
            border-radius: 14px;
            height: 44px;
        }

        .note {
            font-size: 14px;
            color: #6c757d;
        }
    </style>
</head>
<body>

    <div class="card shadow p-4">
        <h4 class="text-center">🔑 Quên mật khẩu</h4>

        <div class="note text-center mb-3">
            Nhập email đã đăng ký để đặt lại mật khẩu
        </div>

        @if (ViewBag.Loi != null)
        {
            <div class="alert alert-danger">@ViewBag.Loi</div>
        }

        @if (ViewBag.ThanhCong != null)
        {
            <div class="alert alert-success">@ViewBag.ThanhCong</div>
        }

        <form method="post">
            <div class="mb-3">
                <label>Email</label>
                <input type="email" name="email" class="form-control" required />
            </div>

            <button class="btn btn-primary w-100">
                Gửi yêu cầu
            </button>
        </form>

        <div class="text-center mt-3">
            <a href="/Auth/Login">← Quay lại đăng nhập</a>
        </div>
    </div>

</body>
</html>
