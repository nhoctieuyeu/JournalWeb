@model List<JournalWeb.Models.NhatKy>

<style>
    .list {
        max-width: 640px;
        margin: auto;
        padding: 15px;
    }

    .card {
        border-radius: 14px;
        margin-bottom: 15px;
    }

    .media-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 8px;
        margin-top: 10px;
    }

    .media-item {
        position: relative;
        border-radius: 12px;
        overflow: hidden;
        background: #eef2f7;
        min-height: 90px;
    }

        .media-item.big {
            grid-row: span 2;
            min-height: 190px;
        }

        .media-item img,
        .media-item video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

    .media-tag {
        position: absolute;
        right: 8px;
        bottom: 8px;
        font-size: 11px;
        color: #fff;
        background: rgba(0, 0, 0, .55);
        padding: 2px 7px;
        border-radius: 16px;
    }

    .emotion-card {
        color: #2a2d47;
        position: relative;
    }

    .emotion-art {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .emotion-shape {
        width: 120px;
        height: 120px;
        position: relative;
        --c1: #f4e8ff;
        --c2: #caa5ff;
        --c3: #8f67d8;
        --c4: #fff;
    }

        .emotion-shape .layer,
        .emotion-shape .core {
            position: absolute;
            inset: 0;
            border-radius: 50%;
            background: radial-gradient(circle at 35% 30%, var(--c1), var(--c2));
            border: 2px solid color-mix(in srgb, var(--c4) 82%, var(--c3));
        }

        .emotion-shape .l1 {
            transform: scale(1) rotate(2deg);
            animation: cardRippleA 4s ease-in-out infinite;
        }

        .emotion-shape .l2 {
            transform: scale(.78) rotate(-7deg);
            animation: cardRippleB 3.2s ease-in-out infinite;
        }

        .emotion-shape .l3 {
            transform: scale(.58) rotate(11deg);
            animation: cardRippleC 2.8s ease-in-out infinite;
        }

        .emotion-shape .core {
            inset: 44%;
            background: radial-gradient(circle at center, #fff, color-mix(in srgb, var(--c2) 78%, white));
            border: 0;
            animation: cardCoreGlow 2.2s ease-in-out infinite;
        }

    .shape-spiky .layer, .shape-spiky .core {
        clip-path: polygon(50% 0%, 62% 18%, 83% 10%, 78% 33%, 100% 50%, 78% 67%, 83% 90%, 62% 82%, 50% 100%, 38% 82%, 17% 90%, 22% 67%, 0% 50%, 22% 33%, 17% 10%, 38% 18%);
        border-radius: 0;
    }

    .shape-wave .layer, .shape-wave .core {
        border-radius: 44% 56% 47% 53% / 52% 45% 55% 48%;
    }

    .shape-soft .layer, .shape-soft .core {
        border-radius: 50% 50% 46% 54% / 42% 58% 42% 58%;
    }

    .shape-pentagon .layer, .shape-pentagon .core {
        clip-path: polygon(50% 2%, 95% 35%, 79% 92%, 21% 92%, 5% 35%);
        border-radius: 0;
    }

    .shape-star .layer, .shape-star .core {
        clip-path: polygon(50% 0%, 61% 30%, 95% 35%, 69% 56%, 78% 90%, 50% 70%, 22% 90%, 31% 56%, 5% 35%, 39% 30%);
        border-radius: 0;
    }

    .shape-rings .layer, .shape-rings .core {
        border-radius: 50%;
    }

    .shape-rings .l1 {
        background: transparent;
        border: 2px solid color-mix(in srgb, var(--c4) 85%, var(--c2));
    }

    .shape-rings .l2 {
        inset: 13%;
        background: transparent;
        border: 2px solid color-mix(in srgb, var(--c4) 40%, var(--c2));
    }

    .shape-rings .l3 {
        inset: 28%;
        background: radial-gradient(circle at 35% 35%, color-mix(in srgb, var(--c1) 86%, white), var(--c2));
    }

    .emotion-name {
        position: absolute;
        left: 8px;
        right: 8px;
        bottom: 8px;
        text-align: center;
        font-weight: 700;
        font-size: 12px;
        background: rgba(255,255,255,.65);
        padding: 2px 8px;
        border-radius: 10px;
    }

    @@keyframes cardRippleA {
        0%, 100% {
            transform: scale(1) rotate(2deg);
        }

        50% {
            transform: scale(1.03) rotate(-1deg);
        }
    }

    @@keyframes cardRippleB {
        0%, 100% {
            transform: scale(.78) rotate(-7deg);
        }

        50% {
            transform: scale(.82) rotate(-2deg);
        }
    }

    @@keyframes cardRippleC {
        0%, 100% {
            transform: scale(.58) rotate(11deg);
        }

        50% {
            transform: scale(.62) rotate(6deg);
        }
    }

    @@keyframes cardCoreGlow {
        0%, 100% {
            box-shadow: 0 0 8px color-mix(in srgb, var(--c3) 40%, transparent);
        }

        50% {
            box-shadow: 0 0 20px color-mix(in srgb, var(--c3) 70%, transparent);
        }
    }

    .fab {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 56px;
        height: 56px;
        border-radius: 50%;
        font-size: 28px;
    }
</style>

<div class="list">
    @foreach (var item in Model)
    {
        var noiDungHienThi = item.NoiDung ?? "";
        var moodLabel = "";
        var moodShape = "";
        var moodBg = "";
        var moodC1 = "";
        var moodC2 = "";
        var moodC3 = "";
        var moodC4 = "";

        if (noiDungHienThi.StartsWith("[[MOOD|"))
        {
            var end = noiDungHienThi.IndexOf("]]", StringComparison.Ordinal);
            if (end > 0)
            {
                var token = noiDungHienThi.Substring(7, end - 7);
                var parts = token.Split('|');
                if (parts.Length >= 2)
                {
                    moodLabel = parts[1];

                    switch (parts[0])
                    {
                        case "0": moodShape = "shape-spiky"; moodBg = "radial-gradient(circle at 50% 25%, #d9d2ef, #bcb0e3)"; moodC1 = "#f3ebff"; moodC2 = "#b28cf1"; moodC3 = "#7f4cc9"; moodC4 = "#f7f3ff"; break;
                        case "1": moodShape = "shape-wave"; moodBg = "radial-gradient(circle at 50% 25%, #d7e2fb, #beccef)"; moodC1 = "#f0f5ff"; moodC2 = "#9ab4ff"; moodC3 = "#587de8"; moodC4 = "#eff5ff"; break;
                        case "2": moodShape = "shape-soft"; moodBg = "radial-gradient(circle at 50% 25%, #dff0f8, #cbdeee)"; moodC1 = "#ebf9ff"; moodC2 = "#8cc9f3"; moodC3 = "#4a9fdb"; moodC4 = "#f2fbff"; break;
                        case "3": moodShape = "shape-rings"; moodBg = "radial-gradient(circle at 50% 25%, #e0eef2, #c9dde2)"; moodC1 = "#f4fdff"; moodC2 = "#9dd6e9"; moodC3 = "#73b8cf"; moodC4 = "#ffffff"; break;
                        case "4": moodShape = "shape-pentagon"; moodBg = "radial-gradient(circle at 50% 25%, #e4f5d8, #cce6ba)"; moodC1 = "#f2ffe6"; moodC2 = "#9ee56a"; moodC3 = "#6dc539"; moodC4 = "#fcfff6"; break;
                        case "5": moodShape = "shape-star"; moodBg = "radial-gradient(circle at 50% 25%, #f9efc8, #eedca5)"; moodC1 = "#fff7de"; moodC2 = "#ffd94d"; moodC3 = "#f0b31f"; moodC4 = "#fffdf3"; break;
                        default: moodShape = "shape-star"; moodBg = "radial-gradient(circle at 50% 25%, #f8e4ba, #f0cf96)"; moodC1 = "#fff7e2"; moodC2 = "#ffc85c"; moodC3 = "#f09f17"; moodC4 = "#fffdf5"; break;
                    }

                    noiDungHienThi = noiDungHienThi.Substring(end + 2).Trim();
                }
            }
        }

        <div class="card p-3 shadow-sm">
            <small class="text-muted">
                @(item.NgayViet?.ToString("dd/MM/yyyy") ?? "")
            </small>

            @if (!string.IsNullOrWhiteSpace(item.TieuDe))
            {
                <h6 class="mt-1">@item.TieuDe</h6>
            }

            <p class="mb-1">@noiDungHienThi</p>

            @{
                var medias = item.Medias?.ToList() ?? new List<JournalWeb.Models.NhatKyMedia>();
            }

            @if (!string.IsNullOrWhiteSpace(moodLabel) || medias.Any())
            {
                <div class="media-grid">
                    @if (!string.IsNullOrWhiteSpace(moodLabel))
                    {
                        <div class="media-item big emotion-card" style="background:@moodBg">
                            <div class="emotion-art">
                                <div class="emotion-shape @moodShape" style="--c1:@moodC1;--c2:@moodC2;--c3:@moodC3;--c4:@moodC4;">
                                    <span class="layer l1"></span>
                                    <span class="layer l2"></span>
                                    <span class="layer l3"></span>
                                    <span class="core"></span>
                                </div>
                            </div>
                            <div class="emotion-name">@moodLabel</div>
                        </div>
                    }

                    @for (int i = 0; i < medias.Count; i++)
                    {
                        var media = medias[i];
                        var bigClass = string.IsNullOrWhiteSpace(moodLabel) && i == 0 ? "big" : "";

                        <div class="media-item @bigClass">
                            @if (media.LoaiMedia == "video")
                            {
                                <video src="@media.DuongDanFile" controls playsinline></video>
                                <span class="media-tag">Video</span>
                            }
                            else
                            {
                                <img src="@media.DuongDanFile" alt="media" />
                                <span class="media-tag">Ảnh</span>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

<a href="@Url.Action("Create")"
   class="btn btn-primary fab">+</a>
